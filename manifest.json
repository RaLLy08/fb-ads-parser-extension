{
	"manifest_version": 3,
	"name": "Fb-ad Scraper",
	"description": "Scraps ads",
	"version": "1.0",
	"host_permissions": [
		"http://*/*"
	],
    "permissions": [ "scripting", "activeTab" , "storage"],
    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": [ "app.js" ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {"default_popup": "popup.html"}
}